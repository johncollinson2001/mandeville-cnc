<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="description" content="@ViewData["Description"]" />
    <meta name="keywords" content="@ViewData["Keywords"]" />

    <title>Mandeville Joinery - @ViewData["Title"]</title>
    <link rel="canonical" href="@ViewData["CanonicalUrl"]">

    @* Fonts *@
    <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Roboto:300,400,500,700|Roboto+Slab:400,700|Material+Icons" type="text/css">

    @* CSS *@
    <environment names="Development">
        <link href="@Url.Content("~/lib/bootstrap/dist/css/bootstrap.css")" rel="stylesheet">
        <link href="@Url.Content("~/lib/bootstrap-material-design/dist/css/bootstrap-material-design.css")" rel="stylesheet">
        <link href="@Url.Content("~/lib/bootstrap-material-design/dist/css/ripples.min.css")" rel="stylesheet">
        <link href="@Url.Content("~/css/site.css")" rel="stylesheet">
    </environment>    

    <environment names="Staging,Production">
        <link href="@Url.Content("~/css/site.min.css")" rel="stylesheet">
    </environment>

    @RenderSection("Styles", required: false)
</head>
<body>
    @* Header and nav *@
    @Html.Partial("_Header")

    @* Page content *@
    @RenderBody()

    @* Footer *@
    @if (!ViewData.ContainsKey("HideFooter") || (ViewData.ContainsKey("HideFooter") && !bool.Parse(ViewData["HideFooter"].ToString())))
    {
        Html.RenderPartial("_Footer");
    }

    @* Modal *@
    @Html.Partial("_Modal")

    @* Scripts *@
    <script src="https://www.google.com/recaptcha/api.js"></script>

    <environment names="Development">
        <script src="@Url.Content("~/lib/jquery/dist/jquery.js")"></script>
        <script src="@Url.Content("~/lib/jquery-validate/dist/jquery.validate.js")"></script>
        <script src="@Url.Content("~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.js")"></script>
        <script src="@Url.Content("~/lib/bootstrap/dist/js/bootstrap.js")"></script>
        <script src="@Url.Content("~/lib/bootstrap-material-design/dist/js/material.js")"></script>
        <script src="@Url.Content("~/lib/bootstrap-material-design/dist/js/ripples.js")"></script>
        <script src="@Url.Content("~/js/site.js")"></script>
        <script src="@Url.Content("~/js/slider.js")"></script>
    </environment>

    <environment names="Staging,Production">
        <script src="@Url.Content("~/js/site.min.js")"></script>
    </environment>

    @RenderSection("Scripts", required: false)

    @* Initialise the bootstrap material design framework *@
    <script>
        $(function () {
            $.material.init();
        });
    </script>
</body>
</html>